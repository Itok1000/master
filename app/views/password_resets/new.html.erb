<% content_for(:title, t('password_ressets.new.title')) %>
<div class="top-wrapper">
 <div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1><%= t('password_ressets.new.title') %></h1>
      <%= form_with url: password_resets_path, local: true, method: :post do |form| %>
        <div class="field">
         <%= form.label :email %><br />
          <div class='text-center mt-3'>
           <%= form.text_field :email, class: "form-control custom-input" %>
          </div>
          <div class='mt-3'>
           <%= form.submit t('password_ressets.new.submit') ,class: "btn btn-primary"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
 </div>
</div>
     
   