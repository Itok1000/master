<% content_for :title, t('password_resets.new.title') %>
<div class="top-wrapper">
 <div class="container">
  <div class="row">
   <div class="col-md-10 col-lg-8 mx-auto">
    <div class='text-center'>
     <h3><%= t('password_resets.new.title') %></h3>
    </div>
    <%= form_with url: password_resets_path, local: true, method: :post do |form| %>

     <div class="mb-3">
      <%= form.label :email, class: "form-label" %><br />
      <%= form.text_field :email, class: "form-control custom-input" %>
     </div>
     <div class="mt-3">
      <%= form.submit t('.submit'), class: "btn btn-primary" %>
     </div>

    <% end %>
   </div> 
  </div> 
 </div>
</div>