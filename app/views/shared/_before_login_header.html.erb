<header id='header' class='header-bottom'>
<nav class='navbar navbar-expand-lg navigation navbar-light custom-bg'>
    <%= link_to '/', class: 'navbar-brand' do %>
      <%= image_tag 'logo.png', width: '50px', height: '50px' %>
    <% end %>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>
    <%= link_to 'JP', url_for(locale: :ja), class: "text-white text-xs py-2 px-2" %> /
    <%= link_to 'EN', url_for(locale: :en), class: "text-white text-xs py-2 px-2" %>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to t('header.login'), login_path, class: "nav-link" %>
        </li>

        <li class='nav-item'>
          <%= link_to t('header.new'), new_user_path, class: 'nav-link' %>
        </li>
      </ul>
    </div>
  </nav>
</header>