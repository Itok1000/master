<header id='header' class='header-bottom'>
  <nav class='navbar navbar-expand-lg navigation navbar-light custom-bg'>
    <%= link_to '/', class: 'navbar-brand' do %>
      <%= image_tag 'logo.png', width: '50px', height: '50px' %>
    <% end %>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
      <!-- ログアウト -->
        <li class='nav-item'>
          <%= link_to t('header.logout'), logout_path, data: { turbo_method: :delete } , class: 'nav-link'%>
        </li>

        <!-- ドロップダウンメニュー -->
        <li class='nav-item dropdown'>
          <!-- トリガー部分 -->
          <a href='#' class='nav-link dropdown-toggle' id='navbarDropdown' role='button' data-bs-toggle='dropdown' aria-expanded='false'>
            <%= current_user.decorate.full_name %> <!-- ログインしているユーザー名 -->
          </a>

          <!-- ドロップダウンメニュー -->
          <ul class='dropdown-menu dropdown-menu-end custom-bg'>
           <div style='text-align: center;'>
            <li class='nav-item'><%= link_to t('header.show'), profile_path , class: 'nav-link'%></li>
            <li><hr class='dropdown-divider'></li>
            <li class='nav-item'><%= link_to '「参考になった」投稿', favorites_posts_path, class: 'nav-link' %></li>
            <li class='nav-item'><%= link_to '投稿一覧', '#', class: 'nav-link' %></li>
           </div>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>

